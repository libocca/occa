device, real(4) function addTwoNumbers1(a, b)
  implicit none

  real(4), intent(in) :: a, b

  addTwoNumbers1 = a + b

end function addTwoNumbers1

device subroutine addTwoNumbers2(ab, a, b)
  implicit none

  real(4), intent(in)  :: a, b
  real(4), intent(out) :: ab

  ab = a + b

end subroutine addTwoNumbers2

